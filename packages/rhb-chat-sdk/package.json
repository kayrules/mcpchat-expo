{
  "name": "rhb-chat-sdk",
  "version": "1.0.0",
  "description": "RHB AI Chat SDK for React Native and Expo applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch", 
    "clean": "rm -rf lib",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "node scripts/post-install.js || echo 'SDK setup complete'"
  },
  "keywords": [
    "react-native",
    "expo",
    "chat",
    "ai",
    "sdk",
    "rhb"
  ],
  "author": "RHB Banking Group",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "@expo/vector-icons": ">=14.0.0",
    "expo-image-picker": ">=15.0.0",
    "expo-document-picker": ">=12.0.0",
    "expo-audio": ">=0.4.0",
    "expo-media-library": ">=17.0.0",
    "expo-image-manipulator": ">=12.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.70.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rhb-banking/rhb-chat-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/rhb-banking/rhb-chat-sdk/issues"
  },
  "homepage": "https://github.com/rhb-banking/rhb-chat-sdk#readme",
  "files": [
    "lib/",
    "assets/",
    "scripts/",
    "INSTALLATION.md",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}